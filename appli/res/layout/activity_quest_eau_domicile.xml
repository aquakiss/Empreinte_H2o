<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".Quest_eau_domicile" >

    <LinearLayout
		    android:id="@+id/lsuper"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
		    
		<LinearLayout
		    android:id="@+id/lchauffe"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

			<TextView
			    android:id="@+id/TV1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="36dp"
			    android:textSize="18sp"
			    android:textStyle="bold"
			    android:text="@string/edq1" />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/lchauf1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		    <CheckBox
		        android:id="@+id/checkBox1"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:text="@string/edq1r1"
		        android:textSize="14sp"
		         />

		    <CheckBox
		        android:id="@+id/checkBox2"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:text="@string/edq1r2"
		        android:textSize="14sp" />

		    <CheckBox
		        android:id="@+id/checkBox3"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"    
		        android:text="@string/edq1r3"
		        android:textSize="12sp" />
		 </LinearLayout>
		
		<LinearLayout
		    android:id="@+id/lrobinet"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginLeft="36dp"
		    android:layout_marginTop="11dp" >
		
		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:textSize="18sp"
			    android:textStyle="bold"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="10dp"
		        android:text="@string/edq2" />

		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:textSize="18sp"
			    android:textStyle="bold"
			    android:layout_marginLeft="10dp"
		        android:text="@string/Fre" />
		    
		    </LinearLayout>		
		
		<LinearLayout
		    android:id="@+id/l4"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		
		    <TextView
		        android:id="@+id/tV"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginRight="15dp"
		   	    android:layout_marginLeft="3dp"
		        android:text="@string/edq2c1" />

		    <EditText
		        android:id="@+id/edit"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginLeft="22dp"
		   	    android:hint="@string/combmois" />
		    </LinearLayout>
		    
		 <LinearLayout
		    android:id="@+id/l4.5"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

		     <TextView
		         android:id="@+id/textView1"
		         android:layout_width="100dp"
		         android:layout_height="wrap_content"
		         android:text="@string/edq2c2" />

		     <Spinner
		         android:id="@+id/spin1"
		         android:layout_width="100dp"
		         android:layout_height="wrap_content"
		         android:layout_weight="1" />

		     <EditText
		         android:id="@+id/editText1"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:ems="6" 
		         android:hint="@string/temp" />
		     
		    <EditText
		         android:id="@+id/editText22"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:ems="6"
		         android:hint="@string/combjour" />
		     
		</LinearLayout>
    
		<LinearLayout
		    android:id="@+id/ldouche"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="11dp" 
		    android:layout_marginLeft="36dp">

			<TextView
			    android:id="@+id/textViews2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dp"
			    android:text="@string/edq3"
			    android:textSize="18sp"
			    android:textStyle="bold" />

		    <TextView
		        android:id="@+id/textViews3"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:textSize="18sp"
			    android:textStyle="bold"
			    android:layout_marginLeft="40dp"
		        android:text="@string/Fre" />	    
		</LinearLayout>
				
		<LinearLayout
		    android:id="@+id/l6"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="11dp" >

			<Spinner
			    android:id="@+id/spin2"
			    android:layout_width="137dp"
			    android:layout_height="wrap_content" />

			<EditText
			    android:id="@+id/edt1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:hint="@string/temp" />

			<EditText
			    android:id="@+id/edt2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:hint="@string/combjour" />
		    
		</LinearLayout>
		    
		<LinearLayout
		    android:id="@+id/lbain"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginLeft="36dp"
		    android:layout_marginTop="11dp" >
		
		    <TextView
		        android:id="@+id/TVbain1"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:textSize="18sp"
			    android:textStyle="bold"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="30dp"
		        android:text="@string/edq4" />

		    <TextView
		        android:id="@+id/TVbain2"
		        android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		        android:textSize="18sp"
			    android:textStyle="bold"
			    android:layout_marginLeft="40dp"
		        android:text="@string/Fre" />	
		    
		 </LinearLayout>
		 
		<LinearLayout
		    android:id="@+id/lb1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

			<EditText
			    android:id="@+id/editText2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ems="10"
			    android:layout_marginLeft="100dp"
			    android:hint="@string/combjour" />
			
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/lbuttonchange"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="20dp"
		    style="?android:attr/buttonBarStyle" >
		    
        <Button
            android:id="@+id/eau_precedent_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#99CCCC"
            android:layout_weight="0.45"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/bt_precedent" />

        <Button
            android:id="@+id/eau_suivant_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#99CCCC"
            android:layout_weight="0.55"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/bt_suivant" />
		    
		</LinearLayout>
    </LinearLayout>
</ScrollView>